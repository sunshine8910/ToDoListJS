<Window x:Class="js.ToDoListContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDoListContact" Height="300" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ListView Margin="8" Grid.Row="0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Auswahl" Width="80"/>
                    <GridViewColumn Header="Name" Width="120" />
                    <GridViewColumn Header="Vorname" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Button Grid.Row="1" Content="Hinzufügen" Margin="8"/>

    </Grid>
</Window>
